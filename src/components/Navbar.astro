<header id="main-header" class="fixed top-0 left-0 w-full backdrop-blur-md z-50">
    <nav class="container mx-auto flex items-center justify-between px-4 py-4">
        <div>
            <a href="/" class="text-white">
                <!-- <img src="/logoDark.avif" width="180" height="60" alt="Logo Ecolodge Cabañas y Retiros"> -->
                ECOLODGE CABAÑAS Y RETIROS
            </a>
        </div>

        <button id="menu-toggle" class="xl:hidden text-white focus:outline-none" aria-label="Abrir Menú">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 transition-transform duration-300 ease-in-out" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>

        <ul id="menu" class="hidden xl:flex flex-col xl:flex-row items-center text-white absolute xl:relative top-full left-0 w-full xl:w-auto bg-black bg-opacity-80 xl:bg-transparent shadow-md xl:shadow-none transition-all duration-300 ease-in-out text-center">
            <li>
                <a href="/" class="block py-3 px-4 hover:text-green-200 transition menu-link">
                    Inicio
                </a>
            </li>
            <li>
                <a href="/urubamba-valle-sagrado" class="block py-3 px-4 hover:text-green-200 transition menu-link">
                    Urubamba
                </a>
            </li>
            <li class="hidden xl:block">
                <a href="/tingo-maria" class="block py-3 px-4 hover:text-green-200 transition menu-link">
                    Tingo María
                </a>
            </li>
            <li class="hidden xl:block">
                <a href="/cusco" class="block py-3 px-4 hover:text-green-200 transition menu-link">
                    Cusco
                </a>
            </li>

            <li class="relative group">
                <a href="#" id="programs-toggle" class="py-3 px-6 hover:text-green-200 transition flex items-center justify-center">
                    Experiencias
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transition-transform duration-300 group-hover:rotate-180" id="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M6 9l6 6 6-6" />
                    </svg>
                </a>

                <ul id="programs-menu" class="hidden xl:absolute xl:top-full xl:left-0 xl:w-56 bg-black/90 shadow-xl text-center rounded-b-lg border-t border-green-200 xl:opacity-0 xl:translate-y-2 xl:group-hover:opacity-100 xl:group-hover:translate-y-0 xl:group-hover:flex xl:flex-col xl:transition-all xl:duration-300">
                    <li>
                        <a href="/retiros" class="block px-4 py-2 hover:bg-gray-700 transition menu-link">
                            Retiros
                        </a>
                    </li>
                    <li>
                        <a href="/campamentos-conscientes" class="block px-4 py-2 hover:bg-gray-700 transition menu-link">
                            Campamentos Conscientes
                        </a>
                    </li>
                    <li>
                        <a href="/entrenamientos-corporativos" class="block px-4 py-2 hover:bg-gray-700 transition menu-link">
                            Entrenamientos Corporativos
                        </a>
                    </li>
                </ul>
            </li>

            <li class="hidden xl:block">
                <a href="/eventos" class="block py-3 px-4 hover:text-green-200 transition menu-link">
                    Eventos
                </a>
            </li>
            <li>
                <a href="/galeria" class="block py-3 px-4 hover:text-green-200 transition menu-link">
                    Galería
                </a>
            </li>
            <li>
                <a href="/contactanos" class="block py-3 px-4 hover:text-green-200 transition menu-link">
                    Contacto
                </a>
            </li>
        </ul>
    </nav>
</header>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const header = document.getElementById("main-header");
        const menuToggle = document.getElementById("menu-toggle");
        const menu = document.getElementById("menu");
        const menuLinks = document.querySelectorAll(".menu-link");
        const programsToggle = document.getElementById("programs-toggle");
        const programsMenu = document.getElementById("programs-menu");

        if (header) {
             window.addEventListener("scroll", function () {
                if (window.scrollY > 50) {
                    header.classList.add("bg-black");
                    header.style.background = "rgba(0, 0, 0, 0.75)";
                } else {
                    header.classList.remove("bg-black");
                    header.style.background = "transparent";
                }
            });
        }

        if (menuToggle && menu) {
            menuToggle.addEventListener("click", () => {
                menu.classList.toggle("hidden");
            });

            menuLinks.forEach((link) => {
                link.addEventListener("click", () => {
                    menu.classList.add("hidden");
                });
            });

            window.addEventListener("resize", () => {
                if (window.innerWidth >= 1024) {
                    menu.classList.add("hidden");
                }
            });
        }

        if (programsToggle && programsMenu) {
            programsToggle.addEventListener("click", (e) => {
                if (window.innerWidth < 1024) {
                    e.preventDefault();
                    programsMenu.classList.toggle("hidden");
                }
            });

            window.addEventListener("resize", () => {
                if (window.innerWidth >= 1024) {
                    programsMenu.classList.add("hidden");
                }
            });
        }

        const currentPath = window.location.pathname.toLowerCase();

        menuLinks.forEach((link) => {
            const href = link.getAttribute("href")?.toLowerCase();

            if (href && href !== "/") {
                if (currentPath.startsWith(href)) {
                    link.classList.add("text-green-200", "font-bold");
                    link.classList.remove("text-white");
                } else {
                    link.classList.remove("text-green-200", "font-bold");
                    link.classList.add("text-white");
                }
            } else if (href === "/" && currentPath === "/") {
                link.classList.add("text-green-200", "font-bold");
                link.classList.remove("text-white");
            } else {
                link.classList.remove("text-green-200", "font-bold");
                link.classList.add("text-white");
            }
        });
    });
</script>